---
import FeaturedItems from '../components/FeaturedItems/FeaturedItems.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getRoadmapsByTag } from '../lib/roadmap';

const roleRoadmaps = await getRoadmapsByTag('role-roadmap');

---

<BaseLayout
  title='KGX Roadmaps'
  description={'Making the world a better place through constructing elegant hierarchies..'}
  permalink={'/'}
>
<div class='bg-black'>
      <div class='border-b border-b-[#1e293c]'>
      <div class='container text-left sm:text-center py-6 sm:py-20 px-6 sm:px-0'>
        <h1
          class='text-2xl sm:text-5xl mb-2 sm:mb-4 font-bold bg-white text-transparent bg-clip-text'
        >
          KGx Roadmaps
        </h1>

        <p class='hidden sm:block text-[#DADADA] text-lg px-4'>
          <span class='font-medium text-[#DADADA]'>"Develop the X FACTOR In You."</span>
          <span class="font-small text-[#DADADA]">The High Performance Roadmaps curated with ‚ù§ by</span>
          <span class='font-medium text-[#DADADA]'>"THE TEAM"</span>
        </p>

        <p class='block sm:hidden text-gray-400 text-md px-0'>
          Making the world a better place through constructing elegant hierarchies.
        </p>
      </div>
    </div>

    <FeaturedItems
      heading='Role based Roadmaps'
      featuredItems={roleRoadmaps.map((roadmapItem) => ({
        text: roadmapItem.frontmatter.briefTitle,
        url: `/${roadmapItem.id}`,
        isNew: roadmapItem.frontmatter.isNew,
        isUpcoming: roadmapItem.frontmatter.isUpcoming,
      }))}
    />
  </div>
</BaseLayout>
