---
import BaseLayout from './BaseLayout.astro';

const { frontmatter = {} } = Astro.props;
const { title, description, noIndex = false } = frontmatter;
---

<BaseLayout title={title} description={description} noIndex={noIndex}>
	<div class="dark:bg-gradient-to-b dark:from-slate-900 dark:to-black">
		<div class='container prose py-12 dark:prose-invert'>
			<slot />
		</div>
	</div>
</BaseLayout>
